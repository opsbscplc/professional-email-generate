# npm Configuration for Vercel Deployment Resilience

# Network retry settings
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-timeout=300000

# Connection settings to prevent ECONNRESET
maxsockets=5
network-concurrency=5

# Cache settings
prefer-offline=false
cache-min=0

# Registry settings
registry=https://registry.npmjs.org/
strict-ssl=true

# Build performance
legacy-peer-deps=false
engine-strict=false

# Installation behavior
audit=false
fund=false
loglevel=error

# Prevent tar extraction issues
foreground-scripts=true
ignore-scripts=false
