{
  "name": "email-template-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=e2e,integration,accessibility,visual-regression",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e-workflows",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:visual": "jest --testPathPattern=visual-regression",
    "test:security": "jest --testPathPattern=security",
    "test:performance": "jest --testPathPattern=performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:accessibility && npm run test:security && npm run test:performance",
    "build:analyze": "set ANALYZE=true && next build",
    "build:production": "set NODE_ENV=production && next build",
    "performance:test": "npm run build && npm run performance:lighthouse",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel:env": "vercel env pull .env.local",
    "vercel:logs": "vercel logs",
    "vercel:inspect": "vercel inspect"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "jspdf": "^3.0.3",
    "next": "^14.2.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "postcss": "^8.4.0",
    "pptxgenjs": "^4.0.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "web-vitals": "^4.2.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@next/bundle-analyzer": "^14.2.0",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-image-snapshot": "^6.5.1",
    "lighthouse": "^12.0.0",
    "prettier": "^3.3.0",
    "puppeteer": "^24.15.0"
  }
}
